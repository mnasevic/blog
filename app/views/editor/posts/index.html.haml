%section.resource-posts
  %header.resource-title
    %h2 All posts
  %nav.resource-nav
    %ul
      %li= link_to "New", new_editor_post_path
      %li= link_to "List", editor_posts_path
  %ul
    - @posts.each_with_index do |post, index|
      %li
        %span.index= index + 1
        %span.title= post.title
        %span.created-at= post.created_at
        %span.resource-actions
          = link_to "Edit", edit_editor_post_path(post)
          |
          = link_to "Show", "#"
          |
          = link_to "Delete", "#"
